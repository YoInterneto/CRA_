%Consultas
consult('draw.pl').

%Oracion Simple
oracion(o(GN,GV)) --> g_nominal(GN), g_verbal(GV).

%Oracion Coordinada
oracion_coor(ocoor(GN)) --> g_nominal(GN).

%Oracion Subordinada de relativo
oracion_sub(osub(GN)) --> g_nominal(GN).

%Oracion Compuesta
oracion_com(ocom(GN)) --> g_nominal(GN).

%Grupo Nominal
g_nominal(gn(N)) --> nombre(N).
g_nominal(gn(D,N)) --> determinante(D), nombre(N).
g_nominal(gn(N,A)) --> nombre(N), adjetivo(A).

%Grupo Adjetival
g_adjetival(gadj(A))--> adjetivo(A).

%Grupo Adverbial
g_adverbial(gadv(AD)) -->adverbio(AD).

%Grupo Proposicional
g_preposicional(gprep(P)) --> preposicion(P).

%Grupo Verbal
g_verbal(gv(V)) --> verbo(V).
g_verbal(gv(V,GN)) --> verbo(V), g_nominal(GN).
g_verbal(gv(V,A)) --> verbo(V),adjetivo(A).


